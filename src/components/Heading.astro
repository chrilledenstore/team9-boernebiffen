---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", font = "sans", color = "", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  large: "text-3xl lg:text-6xl",
  medium: "text-2xl lg:text-3xl",
  small: "text-xl",
};

const colorType = {
  brand: "text-purple-950",
};
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  body: "font-body",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font], colorType[color]]}><slot /></Htmlheading>
